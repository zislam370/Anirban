<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <Button
            android:id="@+id/downbtn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/landing_btn"
            android:onClick="download"
            android:text="Download"
            android:textColor="#FFF4F5F5" />

        <Button
            android:id="@+id/collectionbtn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/downbtn"
            android:background="@drawable/landing_btn"
            android:onClick="collection"
            android:text="Collection"
            android:textColor="#FFF4F5F5" />

        <Button
            android:id="@+id/submissonbtn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/collectionbtn"
            android:background="@drawable/landing_btn"
            android:onClick="submission"
            android:text="Data Submission"
            android:textColor="#FFF4F5F5" />
    </RelativeLayout>
</FrameLayout>
